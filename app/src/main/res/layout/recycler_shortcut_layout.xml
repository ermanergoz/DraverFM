<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.erman.usurf.home.ui.HomeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/button_selectable_background"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> viewModel.onShortcutClick(shortcut)}"
        android:onLongClick="@{() -> viewModel.onShortcutLongClick(shortcut)}"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shortcut"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:textSize="22sp" />
    </LinearLayout>
</layout>